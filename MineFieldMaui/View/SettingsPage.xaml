<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MineFieldMaui.View.SettingsPage"
             Title="Settings">
    <StackLayout Orientation="Vertical" Spacing="8" Margin="4" HorizontalOptions="CenterAndExpand">
        <Button Command="{Binding LoadGameCommand}" Text="Load" />
        <Button Command="{Binding SaveGameCommand}" Text="Save" />

        <Picker
            Title="Pick the board's size:"
            HorizontalTextAlignment="Center"
            ItemsSource="{Binding DifficultyLevels}"
            ItemDisplayBinding="{Binding DifficultyText}"
            SelectedItem="{Binding Difficulty}" />
    </StackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MineFieldMaui.View.SettingsPage"
             Title="Settings">
    <StackLayout Orientation="Vertical" Spacing="10" Margin="4" HorizontalOptions="CenterAndExpand">
        <Button Command="{Binding LoadGameCommand}" Text="Load" />
        <Button Command="{Binding SaveGameCommand}" Text="Save" />
        <Button Command="{Binding NewGameCommand}" CommandParameter="6" Text="New game [6x6]" />
        <Button Command="{Binding NewGameCommand}" CommandParameter="10" Text="New game [10x10]" />
        <Button Command="{Binding NewGameCommand}" CommandParameter="16" Text="New game [16x16]" />
    </StackLayout>
</ContentPage>